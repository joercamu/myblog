
  <%= link_to 'New Article', new_article_path %>
  <% @articles.each do |article| %>
  <div class="article">
    <h1 class="article-title"><%= link_to article.title, article %></h1>
    <div class="article-image">
      <%if article.cover_file_name.nil? %>
      <%else%>
      <%=image_tag article.cover.url(:medium) %>
      <%end%>
    </div>
    <p class="article-body"><%= article.body %></p>
    <p class="article-by">Escrito por: <%= article.user.email %>, en <%= article.created_at%></p>
    <div class="article-options">
      <ul>
        <%if user_signed_in? && current_user.is_editor? %>
        <li><%= link_to 'Editar', edit_article_path(article) %></li>
        <%end%>
        <%if user_signed_in? && current_user.is_admin? %>
        <li><%= link_to 'Eliminar', article, method: :delete, data: { confirm: 'Estas seguro?' } %></li>
        <%end%>
        <%if user_signed_in? && article.may_publish? %>
        <li><%= link_to 'Publicar', "articles/#{article.id}/publish", method: :put %></li>
        <%end%>
      </ul>
    </div>
  </div>
  <hr>

<% end %>

