<%if user_signed_in?%>
  <%=link_to 'Nuevo Articulo', new_article_path, class:"button top-space"%>
<%end%>
  <div class="row">
  <% @articles.each do |article| %>
      <div class="small-12 medium-4 large-4 columns">
        <figure class="article">
          <%if article.cover.exists? %>
          <img src="<%= article.cover.url(:medium)%>">
          <%else%>
          <img >
          <%end%>
          <div class="body-article">
            <h3 class="title-article"><%=truncate(article.title.capitalize) %></h3>
            <p class="info-article"><%=truncate(article.markup.html_safe, length:210)%></p>
            <%=link_to "LEER MAS >", article, class:"link-article" %>
          </div>
          
        </figure>
       
      </div>
  <% end %>
  </div>
  <div class="center"><%= will_paginate @articles, :next_label => ">",:previous_label => "<", :class => "pagination" %></div>



